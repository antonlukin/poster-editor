<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Custom PEAR</description>
    <rule ref="PEAR">
        <exclude name="PEAR.WhiteSpace.ScopeIndent"/>
    </rule>
    <rule ref="Generic.WhiteSpace.ScopeIndent"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="160"/>
        </properties>
    </rule>
</ruleset>